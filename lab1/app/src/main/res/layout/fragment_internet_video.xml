<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".internet_videoFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/link_internet"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/put_url"
            android:inputType="textPersonName"
            android:text="https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
            android:textColor="@color/text"
            android:textColorHint="@color/text_background" />

        <Button
            android:id="@+id/internet_button_play"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:backgroundTint="@color/buttons_color"
            android:text="@string/play"
            android:textColor="@color/buttons_text_color" />

        <VideoView
            android:id="@+id/internetVideoView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center" />

    </LinearLayout>
</FrameLayout>