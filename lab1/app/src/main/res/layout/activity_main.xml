<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/text_field"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center"
        android:textColorHint="@color/text_background"
        android:textColor="@color/text"
        android:layout_marginHorizontal="20sp"
        android:backgroundTint="@color/text_background"
        android:textSize="30sp"/>


    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="15dp"
        android:text="@string/button_left"
        android:layout_marginHorizontal="270px">

    </Button>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270px"
        android:layout_alignStart="@id/button_ok"
        android:text="@string/Button_right">

    </Button>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_ok"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textColorHint="@color/text_background"
        android:layout_marginHorizontal="20sp"
        android:backgroundTint="@color/text_background"
        android:textSize="30sp"/>



    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_below="@id/text_field"
        android:layout_marginHorizontal="100sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/radio_group"
        android:layout_marginTop="7dp"
        >

        <RadioButton
            android:id="@+id/f_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/adamina"
            android:text="@string/first_font"
            android:textColor="@color/black"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/s_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:text="@string/second_font"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/t_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bahiana"
            android:text="@string/third_font"
            android:textColor="@color/black"/>
    </RadioGroup>

</RelativeLayout>